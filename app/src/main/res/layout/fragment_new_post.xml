<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <EditText
        android:id="@+id/new_post_text_edit"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:textColor="@color/textOnBackground"
        android:background="@color/textBoxBackground"
        android:elevation="1dp"
        android:hint="@string/post_text_placeholder"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/new_post_add_image_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_image"
        android:layout_below="@id/new_post_text_edit"
        android:elevation="2dp"
        android:background="@color/colorPrimary"
        android:contentDescription="heyo" />

    <ImageButton
        android:id="@+id/new_post_add_video_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_video"
        android:background="@color/colorSecondary"
        android:layout_below="@id/new_post_add_image_button"
        android:elevation="2dp"
        android:contentDescription="heyo" />

    <Button
        android:id="@+id/new_post_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:background="@color/colorSecondaryLight"
        android:textColor="@color/textOnPrimary"
        android:layout_below="@id/new_post_add_video_button"
        android:elevation="2dp" />

</RelativeLayout>