<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cardview_shadow_end_color"
        android:elevation="0dp">


        <ImageView
            android:id="@+id/user_list_profile_pic_holder"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars[12]"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@color/lightTextOnBackground"/>

        <TextView
            android:id="@+id/user_list_name_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_text"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textOnBackground"
            android:layout_toRightOf="@id/user_list_profile_pic_holder"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/user_list_handle_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@handle"
            android:textSize="15sp"
            android:textColor="@color/lightTextOnBackground"
            android:layout_toRightOf="@id/user_list_profile_pic_holder"
            android:layout_below="@id/user_list_name_placeholder"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <View
        android:layout_below="@id/user_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>